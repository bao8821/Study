#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
int main()
{
	char input[] = { 0 };
	system("shutdown -s -t 60");
again:
	printf("电脑将于60秒后关机，输入“不”，取消关机。\n");
	scanf("%s", input);
	if (strcmp(input, "不") == 0)
		system("shutdown -a");
	else
		goto again;
	return 0;
}
